<h1>Editando Turma</h1>
<div class="mb-3">
  <%= link_to "Turmas", classrooms_path, class: "btn btn-secondary" %>
</div>
<%= form_with(model: @classroom, local: true) do |f| %>
  
  <div class="mb-3">
    <%= f.label 'Nome', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.submit "Salvar", class: 'btn btn-primary' %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Mostrar Turma", @classroom %> |
  <%= link_to "Turmas", classrooms_path %>
</div>
