<header class="bg-white border-bottom mb-4 py-3">
  <% if current_user %>
    <div class="container d-flex justify-content-between align-items-center">
      <div>
        <%= link_to "Logout", sessions_destroy_path, method: :get, class: "btn btn-danger" %>
        <%= link_to "Turmas", classrooms_path, class: "btn btn-outline-secondary mr-2" %>
        <%= link_to "Sobre", about_path, class: "btn btn-outline-secondary mr-2" %>
        <%= link_to "Notificações", notifications_path, class: "btn btn-outline-secondary mr-2" %>
      </div>
      
      <div class="text-muted font-weight-bold">
        <i class="fas fa-user-circle mr-1"></i>
        <%= current_user.name %>
      </div>
    </div>
  <% end %>
</header>
