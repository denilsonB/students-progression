<!DOCTYPE html>
<html>
<head>
  <title>YourAppName</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_tag 'application' %>

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-4">
        <% if flash[:notice] %>
          <h1 class="text-center"><%= flash[:notice] %></h1>
        <% else %>
          <h1 class="text-center">Login</h1>
        <% end %>
        <%= form_with url: sessions_path, local: true, class: "needs-validation", novalidate: true do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.text_field :email, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label 'Senha', class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>
          
          <div class="d-flex justify-content-between">
            <%= link_to "Cadastro", new_user_path, class: "btn btn-link" %>
            <%= f.submit "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
